<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/colorAccent">

        <VideoView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/post_animated_preview"
                android:contentDescription="@string/GalleryItemDescription"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/post_animated_title"
                android:layout_marginStart="0dp" android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true" android:background="@drawable/ic_launcher_background"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:id="@+id/post_animated_placeholder"
                android:contentDescription="@string/GalleryItemDescription"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp" android:layout_marginStart="0dp" android:layout_marginLeft="0dp"
                android:layout_alignParentLeft="true" android:background="@drawable/ic_launcher_background"
                android:layout_below="@+id/post_animated_title"/>

        <TextView
                android:text="@string/title"
                android:layout_width="312dp"
                android:layout_height="66dp"
                android:layout_alignParentTop="true" android:id="@+id/post_animated_title"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
                android:layout_alignParentLeft="true" android:layout_marginTop="0dp"
                android:gravity="center_vertical|center_horizontal" android:textColor="@color/colorSecondary"
                android:textSize="24sp" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_marginRight="0dp" android:layout_marginEnd="0dp"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/post_animated_up" android:layout_marginTop="3dp" android:layout_below="@+id/post_animated_placeholder"
                android:layout_marginStart="5dp" android:layout_marginLeft="10dp"
                android:layout_alignLeft="@+id/post_animated_placeholder" android:layout_alignStart="@+id/post_animated_placeholder"
                android:visibility="visible" android:background="@drawable/ic_arrow_up"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/post_animated_down"
                android:layout_toEndOf="@+id/post_animated_up_text" android:layout_toRightOf="@+id/post_animated_up_text"
                android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_alignTop="@+id/post_animated_up"
                android:layout_marginTop="0dp" android:visibility="visible"
                android:background="@drawable/ic_arrow_drop_down"/>
        <TextView
                android:text="0"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/post_animated_up_text" android:layout_alignTop="@+id/post_animated_up"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/post_animated_up"
                android:layout_toRightOf="@+id/post_animated_up" android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp" android:gravity="center_vertical|center_horizontal"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/post_animated_view"
                android:layout_toEndOf="@+id/post_animated_down_text"
                android:layout_toRightOf="@+id/post_animated_down_text"
                android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
                android:visibility="visible"
                android:background="@drawable/ic_eye_primary" android:layout_alignTop="@+id/post_animated_down_text"
                android:layout_marginTop="0dp"/>
        <TextView
                android:text="0"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/post_animated_view_text" android:layout_alignTop="@+id/post_animated_up"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/post_animated_view"
                android:layout_toRightOf="@+id/post_animated_view" android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp" android:gravity="center_vertical|center_horizontal"/>
        <TextView
                android:text="0"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/post_animated_down_text" android:layout_alignTop="@+id/post_animated_up"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp" android:layout_toEndOf="@+id/post_animated_down"
                android:layout_toRightOf="@+id/post_animated_down" android:gravity="center"/>
        <ToggleButton
                android:id="@+id/post_animated_favorite_toggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_favorite_accent"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:visibility="visible"
                android:layout_marginBottom="0dp" android:layout_alignBottom="@+id/post_animated_placeholder"
                android:layout_alignRight="@+id/post_animated_placeholder" android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp" android:layout_alignEnd="@+id/post_animated_placeholder"/>
        <ToggleButton
                android:id="@+id/post_animated_select_toggle"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_select"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_alignTop="@+id/post_animated_placeholder" android:layout_marginTop="0dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>