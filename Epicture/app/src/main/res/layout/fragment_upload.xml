<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".home.fragment.UploadFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
            >

                <android.support.v7.widget.CardView
                        android:layout_width="152dp"
                        android:layout_height="46dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        android:id="@+id/upload_card" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.952" android:layout_marginBottom="8dp">

                    <RelativeLayout
                            android:layout_width="155dp"
                            android:layout_height="wrap_content">
                        <Button
                                android:text="@string/upload"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/buttonUpload"
                                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                                android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                                android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
                                android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0dp" android:background="@color/colorTransparent"
                                android:textColor="@color/colorSecondary"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="152dp"
                        android:layout_height="46dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        android:id="@+id/choose_card" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.235" android:layout_marginBottom="8dp">

                    <RelativeLayout
                            android:layout_width="155dp"
                            android:layout_height="wrap_content">
                        <Button
                                android:text="@string/choose_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/buttonChoose"
                                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                                android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                                android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
                                android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0dp" android:background="@color/colorTransparent"
                                android:textColor="@color/colorSecondary"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <EditText
                        android:layout_width="266dp"
                        android:layout_height="127dp"
                        android:inputType="text|textMultiLine"
                        android:ems="10"
                        android:id="@+id/editTextDesc" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_bias="0.489" android:layout_marginTop="8dp"
                        android:singleLine="false"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.754"
                        android:hint="Description"/>
                <EditText
                        android:layout_width="273dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextTitle" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_bias="0.505"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.499" android:hint="Title"/>
                <ImageView
                        android:layout_width="273dp"
                        android:layout_height="196dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/imagePreview" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>